@model RatingApp.Models.Author

@{
    ViewData["Title"] = "DeleteAuthor";
}

<h1>DeleteAuthor</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.emailId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.emailId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            <b>Number of Book(s)</b>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.books.Count)
        </dd>
    </dl>
    
    <form asp-action="DeleteAuthor" method="post">
        <input type="hidden" asp-for="emailId"/>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
